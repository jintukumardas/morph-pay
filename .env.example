# MorphPay Environment Configuration

# Application Environment (development, staging, production)
NODE_ENV=development

# WalletConnect Project ID (required for RainbowKit)
# Get your project ID from https://cloud.walletconnect.com/
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# CCTP Environment (mainnet or testnet)
NEXT_PUBLIC_CCTP_ENVIRONMENT=testnet

# Circle API Configuration
NEXT_PUBLIC_CIRCLE_API_KEY=your_circle_api_key_here

# Supported Chains (comma-separated chain IDs for production)
NEXT_PUBLIC_SUPPORTED_CHAINS=1,42161,8453,43114,146

# Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Covalent API Key (required for BlockchainDataProvider)
NEXT_PUBLIC_COVALENT_API_KEY=your_covalent_api_key_here

# Error Reporting
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Features flags
NEXT_PUBLIC_ENABLE_TESTNET=true
NEXT_PUBLIC_ENABLE_HOOKS=true
NEXT_PUBLIC_ENABLE_FAST_TRANSFER=true

# RPC URLs (override default)
NEXT_PUBLIC_ETHEREUM_RPC_URL=https://eth.llamarpc.com
NEXT_PUBLIC_ARBITRUM_RPC_URL=https://arbitrum.llamarpc.com
NEXT_PUBLIC_BASE_RPC_URL=https://base.llamarpc.com
NEXT_PUBLIC_AVALANCHE_RPC_URL=https://avalanche.llamarpc.com
NEXT_PUBLIC_SONIC_RPC_URL=https://rpc.soniclabs.com